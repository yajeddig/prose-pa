PO4                                                ! Species keyword

phosphate = {                                      ! Subspecies name, SPECIES_NUM = 1
    ! Advection-diffusion properties
    transport_type = SOLUTE
    media_type     = FREE_WATER
    advection      = yes
    diffusion      = no
    diff_mol       = [m^2/s] 0.

    ! Diffusion coefficient at water-sediment interface
    ds  = [m^2/s] 0.0015

    ! Adsorption-desorption
    ads_desorption = {
        Kps        = [mgP/l] 0.682
        Pac        = [mgP/mg] 0.0058
        damping    = [s] 600
        adsorbs_on = { mes 1 }
    }
}