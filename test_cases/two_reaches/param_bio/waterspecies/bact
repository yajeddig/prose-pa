! Exp. heterotrophic bacteria
BACT                                           ! Species keyword

shb =                                          ! Subspecies name, SPECIES_NUM = 1
{
    ! Advection-diffusion properties
    transport_type = SOLUTE
    media_type     = FREE_WATER
    advection      = yes
    diffusion      = no
    diff_mol       = [m^2/s] 0.
    
    ! Particulate properties
    rho  = [g/cm^3] 1.2
    phi  = 0.9
    vsed = [m/h] 0.005

    ! Living species properties
    Topt  = [°C] 20.
    sigma = [°C] 17.

    ! Biochemical composition
    C/ P =  [mgC/mgP] 40.
    C/ N =  [mgC/mgN] 7.

    ! Monod-Michaelis-Menten kinetics
    kmich O2  = [mgO2/l] 0.
    kmich mod = [mgC/l] 0.1

    ! Biogeochemical processes
    growth = { 
        mumax  = [/h] 0.04
        yield  = [-] 0.25
        k_bact = [mgC/l] 0.03
    }
    respiration = { }                              ! Mandatory
    mortality  = { 
        mort = [/h] 0.02
    }
}