!                }
!            }
!        }
! - - - - - - - - - - - - - - - - - - - - - - - End of SIMSET-MTO block
        HEAT_TRANSPORT  = {
            THETA_T     = 1.0
            INIT_T_FILE = [°C] include init_T
        }
! - - - - - - - - - - - - - - - - - - - - - - - End of SIMSET-HT block
        TRANSPORT =  {
            THETA_TTC = 0.9
        }
! - - - - - - - - - - - - - - - - - - - - - - - End of SIMSET-ST block
        BIOLOGY = {
            NUMERICAL_METHOD = EXPLICIT
            MAX_DIV_DT       = 1.0
            DZ_RIVE          = [m] 0.1
            LAYERS           = {
                include watercomp
                include vasecomp
            }
            EXCHANGES         = {
                CALC_SEDIM_EROS        = SIMULTANEOUS_PROSE
                ETA_HYD                = [g/cm^3] 0.0013
                PNAVIG                 = [g/m^2/s] 0.0005
            }
            METEO             = {
                TEMPERATURE = {
                    MEAN               = [°C] 12.
                    AMPLITUDE          = [°C] 20.
                    DELAY              = [h]  29. 
                }
                WIND        = { [d]	[m/s]
                                0. 2.
                }
