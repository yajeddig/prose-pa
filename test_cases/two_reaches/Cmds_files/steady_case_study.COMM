        SOLVER            = sp_prose
        DEFAULT_T_INFLOWS = [°C] 20.
        DBO_OXY           = [molO2/molC] 1.0
! - - - - - - - - - - - - - - - - - - - - - - - End of SIMSET-GSET block
        SPECIES = {
            WATER = {
                ! Particulate species
                include phy
                include mop
                include bact
                include bactn
                include mes
                include zoo
                include bif
                ! Dissolved species
                include o2
                include no3
                include mod
                include nh4
                include po4
                include no2
                include si_d
            }
        }
