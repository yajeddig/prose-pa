SIMULATION = {
    test_simulation	

    TIME = {
        DATE_FORMAT  = FR_TS
        YEAR0_JULIAN = 2007
        T_INI        = 01/01/2007 00:00:00 ! [d] 0. 
        T_END        = 01/01/2008 00:00:00 ! [d] 365.
        DT           = [min] 15.
    }
! - - - - - - - - - - - - - - - - - - - - - - - End of SIMTIME block
    SETTINGS = {
        REGIME            = steady
        HYD               = yes
        TTC               = yes
        RIVE              = yes
        TUBE              = no
        DYNAMIC_T         = yes
        DA                = no
        DA_METHOD         = PF
        NUM_THREAD        = 20
        NUM_PARTICULES    = 1
        NUM_THREAD_PAR    = 1
        NUM_TUBE_DEF      = 1
        ALPHA_DA          = 0.3
        ERROR_OBS         = 0.10
        S_PERCENT         = 0.10
